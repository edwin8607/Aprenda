

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Centro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programas.each do |programa| %>
      <tr>
        <td><%= programa.nombre %></td>
        <td><%= programa.centro %></td>
        <td><%= link_to 'Mostrar', programa %></td>
        <td><%= link_to 'Editar', edit_programa_path(programa) %></td>
        <td><%= link_to 'Eliminar', programa, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Programa', new_programa_path %>
