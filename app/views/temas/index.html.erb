<h1>Lista temas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre tema</th>
      <th>Programa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @temas.each do |tema| %>
      <tr>
        <td><%= tema.nombre_tema %></td>
        <td><%= tema.programa %></td>
        <td><%= link_to 'Mostrar', tema %></td>
        <td><%= link_to 'Editar', edit_tema_path(tema) %></td>
        <td><%= link_to 'Eliminar', tema, method: :delete, data: { confirm: 'esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Tema', new_tema_path %>
