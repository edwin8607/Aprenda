<h1>Listing aprendizs</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellido</th>
      <th>Genero</th>
      <th>Identificacion</th>
      <th>Email</th>
      <th>Ficha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aprendizs.each do |aprendiz| %>
      <tr>
        <td><%= aprendiz.nombres %></td>
        <td><%= aprendiz.apellido %></td>
        <td><%= aprendiz.genero %></td>
        <td><%= aprendiz.identificacion %></td>
        <td><%= aprendiz.email %></td>
        <td><%= aprendiz.ficha %></td>
        <td><%= link_to 'Show', aprendiz %></td>
        <td><%= link_to 'Edit', edit_aprendiz_path(aprendiz) %></td>
        <td><%= link_to 'Destroy', aprendiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

