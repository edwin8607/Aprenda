<h1>Lista equipos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre equipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipos.each do |equipo| %>
      <tr>
        <td><%= equipo.nombre_equipo %></td>
        <td><%= link_to 'Mostrar', equipo %></td>
        <td><%= link_to 'Editar', edit_equipo_path(equipo) %></td>
        <td><%= link_to 'Eliminar', equipo, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Equipo', new_equipo_path %>
